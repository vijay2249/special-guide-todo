<%- include('headertext'); -%>

<div class="box" id="heading">
  <h1><%= data.today %></h1>
</div>

<div class="box">
  <form class="item" action="/" method="post">
    <input type="text" name="item" id="new-item" placeholder="Add Item" autocomplete="off">
    <button type="submit" name="">+</button>
  </form>
  <% data.items.forEach(item =>{ %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="delete_item" value="<%= item._id %>" onchange="this.form.submit()">
        <p><%= item.name %></p>
      </div>
    </form>
  <% }) %>
</div>

<%- include('footer'); -%>