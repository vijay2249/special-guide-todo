<%- include('headertext'); -%>

<div class="box" id="heading">
  <h1><%= data.today %></h1>
</div>

<div class="box">
  <form class="item" action="/" method="post">
    <input type="text" name="item" id="new-item" placeholder="Add Item" autocomplete="off">
    <button type="submit" name="">+</button>
  </form>
  <% for(let i=0;i<data.len;i++){%>
    <div class="item">
      <input type="checkbox">
      <p><%= data.items[i] %></p>
    </div>
  <%}%>
</div>

<%- include('footer'); -%>